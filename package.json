{
  "name": "node",
  "version": "1.0.0",
  "description": "Node.js application",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_PATH=. node src",
    "dev": "NODE_PATH=. NODE_ENV=dev nodemon src",
    "test": "npm run test:style && npm run test:unit && npm run test:integration && npm run test:security",
    "test:style": "standard",
    "test:unit": "NODE_PATH=. mocha 'test/unit/**/*.test.js'",
    "test:integration": "NODE_PATH=. mocha --exit 'test/integration/**/*.test.js'",
    "test:security": "npm audit --audit-level=moderate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filipecorrea/node.git"
  },
  "keywords": [
    "node",
    "node.js",
    "application"
  ],
  "author": "Filipe Correa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/filipecorrea/node/issues"
  },
  "homepage": "https://github.com/filipecorrea/node#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "http-status": "^1.4.2",
    "lodash": "^4.17.19",
    "requireindex": "^1.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "faker": "^4.1.0",
    "mocha": "^8.0.1",
